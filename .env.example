# =============================================================================
# Linear API Authentication (required - use one or the other)
# =============================================================================
# Get your API key from: Linear App → Settings → API
LINEAR_API_KEY=lin_api_your_api_key_here
# Or use OAuth 2.0 access token
# LINEAR_ACCESS_TOKEN=your_oauth_access_token_here

# =============================================================================
# Team Issues Report (team_issues_report.js)
# =============================================================================
# Comma-separated list of team member emails
TEAM_EMAILS=developer1@example.com,developer2@example.com,developer3@example.com

# Default number of days to look back (overridden by --days flag)
TEAM_DAYS_BACK=30

# Debug mode for PR metadata detection (optional)
# DEBUG_PR_METADATA=true

# =============================================================================
# Developer Activity Report (linear_queries_developer.js)
# =============================================================================
# Default user email when not passed as command line argument
# USER_EMAIL=developer@example.com
